<theme>
    <manifest>
        <name>test_white</name>
        <label>(Testing) Pure White</label>
        <version>1.0</version>
        <requires>1.4.0.2</requires>
    </manifest>
    <configuration>
        <native>
            <navigationBar>
                <tintColor>#FFFFFF</tintColor>
            </navigationBar>
            <body>
                <primaryColor>#FFFFFF</primaryColor>
                <secondaryColor>#FFFFFF</secondaryColor>
                <backgroundColor>#FFFFFF</backgroundColor>
                <scrollBackgroundColor>#FFFFFF</scrollBackgroundColor>
            </body>
            <categoryItem>
                <tintColor>#FFFFFF</tintColor>
                <backgroundColor>#FFFFFF</backgroundColor>
            </categoryItem>
            <itemActions>
                <relatedProductBackgroundColor>#FFFFFF</relatedProductBackgroundColor>
            </itemActions>
        </native>
        <extra>
            <fontColors>
                <header>#FFFFFF</header>
                <primary>#FFFFFF</primary>
                <secondary>#FFFFFF</secondary>
                <price>#FFFFFF</price>
            </fontColors>
        </extra>
    </configuration>
</theme>
