<?xml version="1.0"?>
<config>
    <modules>
        <Infortis_CloudZoom>
            <version>1.0.0</version>
        </Infortis_CloudZoom>
    </modules>
    <frontend>
        <layout>
            <updates>
                <infortis_cloudzoom module="infortis_cloudzoom">
                    <file>infortis_cloudzoom.xml</file>
                </infortis_cloudzoom>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <infortis_cloudzoom>
                <class>Infortis_CloudZoom_Model</class>
            </infortis_cloudzoom>
        </models>
        <blocks>
            <infortis_cloudzoom>
                <class>Infortis_CloudZoom_Block</class>
            </infortis_cloudzoom>
        </blocks>
        <helpers>
            <infortis_cloudzoom>
                <class>Infortis_CloudZoom_Helper</class>
            </infortis_cloudzoom>
        </helpers>
    </global>
    <default>
        <cloudzoom>
            <general>
                <enabled>1</enabled>
                <position>right</position>
				<lens_opacity>50</lens_opacity>
				<zoom_width>427</zoom_width>
				<big_image_width>650</big_image_width>
                <big_image_height>650</big_image_height>
                <tint_opacity>50</tint_opacity>
				<soft_focus>0</soft_focus>
				<smooth_move>3</smooth_move>
            </general>
        </cloudzoom>
    </default>
</config>
