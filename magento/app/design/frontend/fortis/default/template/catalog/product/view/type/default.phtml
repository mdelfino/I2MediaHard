 * - Removed availability box if product is in stock
 * - Display price if product is out of stock (price for...)
 * - Added conditional clearing after extra data
 */
?>
<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */?>
<?php $_product = $this->getProduct() ?>
<?php if($_extraData = $this->getChildHtml('product_type_data_extra')): ?>
	<?php echo $_extraData; ?>
	<div class="mclear"></div>
<?php endif; ?>

<?php if ($_product->isAvailable()): ?>
	<?php /*my:del <p class="availability in-stock"><?php echo $this->__('Availability:') ?> <span><?php echo $this->__('In stock') ?></span></p> */ ?>
<?php else: ?>
    <p class="availability out-of-stock"><?php echo $this->__('Availability:') ?> <span><?php echo $this->__('Out of stock') ?></span></p>
<?php endif; ?>

<?php if (!$_product->isAvailable()): //If product is out of stock ?>
	<?php echo $this->getPriceHtml($_product) ?>
<?php endif; ?>