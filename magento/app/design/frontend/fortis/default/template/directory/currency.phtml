<?php
/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
/**
 * File rebuilt
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
    <div class="dropdown top-dropdown currency-switcher">       
        <?php
			$selectedCurrency;
			$out = '<ul>';
			foreach ($this->getCurrencies() as $_code => $_name)
			{
				if($_code == $this->getCurrentCurrencyCode())
				{
					$out .= '<li class="selected">'. $_name .' - '. $_code .'</li>';
					$selectedCurrency = $_code;
				}
				else
					$out .= '<li><a href="'. $this->getSwitchCurrencyUrl($_code) .'">'. $_name .' - '. $_code.'</a></li>';
			}
			$out .= '</ul>';
			
			print '<p class="label">'. $this->__('Currency') .':</p><p class="text">'. $selectedCurrency .'</p>';
			print $out;
		?>        	
    </div>
<?php endif; ?>
